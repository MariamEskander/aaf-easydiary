    <style name="AppTheme.FullScreen">
        <item name="windowNoTitle">true</item>
        <item name="windowActionBar">false</item>
        <item name="android:windowFullscreen">false</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowBackground">@null</item>
<!--        <item name="android:windowIsTranslucent">true</item>-->
        <item name="android:windowSplashScreenAnimatedIcon" tools:targetApi="S">@android:color/transparent</item>
    </style>
    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:fastScrollThumbDrawable">@drawable/ic_fast_scroll</item>
        <item name="android:fastScrollTrackDrawable">@null</item>
        <item name="android:windowSplashScreenAnimatedIcon" tools:targetApi="S">@android:color/transparent</item>
    </style>

    <!-- App Theme -->
    <style name="SplashScreenTheme" parent="SplashScreenTheme.Base">
